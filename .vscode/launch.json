{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/src"
    },
    {
      "name": "Launch via NPM : Server Code",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug", "--host", "--port", "5173"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/src",
      "trace": true,
      "sourceMaps": true
    }
  ]
}
